{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@/features/*": ["src/features/*"],
            "@/shared/*": ["src/shared/*"],
            "@/core/*": ["src/core/*"]
        }
    },
    "include": ["src", "app", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
