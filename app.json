{
    "expo": {
        "name": "products-app",
        "slug": "products-app",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/images/icon.png",
        "scheme": "productsapp",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": true,

        "ios": {
            "bundleIdentifier": "com.productsapp",
            "supportsTablet": true,
            "infoPlist": {
                "CFBundleURLTypes": [
                    {
                        "CFBundleURLSchemes": ["productsapp"]
                    }
                ],
                "NSCalendarsUsageDescription": "The app requires access to your calendar to create and modify product purchase reminders.",
                "NSCalendarsFullAccessUsageDescription": "The app requires full access to your calendar to create and modify product purchase reminders."
            }
        },
        "android": {
            "package": "com.productsapp",
            "adaptiveIcon": {
                "foregroundImage": "./assets/images/adaptive-icon.png",
                "backgroundColor": "#ffffff"
            },
            "edgeToEdgeEnabled": true,
            "intentFilters": [
                {
                    "action": "VIEW",
                    "data": [
                        {
                            "scheme": "https",
                            "host": "productsapp.com",
                            "pathPrefix": "/"
                        }
                    ],
                    "category": ["BROWSABLE", "DEFAULT"]
                }
            ]
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/images/favicon.png"
        },
        "plugins": [
            "expo-router",
            "expo-calendar",
            [
                "expo-splash-screen",
                {
                    "image": "./assets/images/splash-icon.png",
                    "imageWidth": 200,
                    "resizeMode": "contain",
                    "backgroundColor": "#ffffff"
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true
        }
    }
}
